
body
  color #555
  margin 0
  font-family 'Arial'
  background-color #F7FAFC
a
  text-decoration none

h1, h2, h3, h4, h5, h6, p, ul
  margin 0
  padding 0
  font-size 100%

.content
  width 300px
  margin 0 auto
  text-align center

.header
  margin-top 100px
  font-size 18px
  h2
    font-weight 400
    margin-top 10px
    
.user
  .tab
    padding 20px 0
    .label
      position relative
      display inline-block
      font-size 20px
      line-height 150%
      a
        color:#666
        margin 0 15px
        &.active
          color #0f88eb
      span
        position absolute
        left 0
        bottom 0
        margin 0 15px
        width 2em
        height 2px
        background-color #0f88eb
        transition: left .15s ease-in
      &[data-active-index='1']
        span
          left: 3.5em
  .form
    overflow hidden
    .reg,.login
      border solid 1px #ccc
      border-bottom none
      overflow hidden
    input
      color #888
      width 100%
      padding 1em .8em
      border none
      border-bottom solid 1px #ccc
      background-color #fff
  .btn
    margin-top 1.2em
    button
      color #fff
      padding 0
      line-height 40px
      width 100%
      background-color #0f88eb
      border none
      border-radius 3px
      cursor pointer
      &:hover
        background-color #55abed
  .remind
    margin-top 22px
    font-size 13px
    text-align center
    .regorg
      margin-top 25px
      font-size 15px
    p
      color #666
    a
      color #0f88eb

.app
  position relative
  button
    margin-top 20px
    width 100%
    height 40px
    color #5fa6e5
    line-height 40px
    border-radius 3px
    border 1px solid #96c2e9
    background 0 0
    cursor pointer
    outline 0
  .qrcode
    position absolute
    left -12px
    bottom 48px
    width 326px
    height 0
    opacity 0
    transition all .2s
    overflow hidden
    .qrcodeimage
      margin 8px
      width 310px
      height 305px
      border-radius 10px
      box-shadow: 0 0 8px 0 rgba(0,0,0,.15)
      background #fff url('../images/qrcode.png') no-repeat center
    .qrcodeico
      margin -22px auto 0
      width 54px
      height 28px
      background url('../images/ico.png') no-repeat 0 -14px
  .qrcodeshow
    opacity 1
    height 324px












