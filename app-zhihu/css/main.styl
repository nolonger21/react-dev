
body 
  color #555
  margin 0
  font-family 'Helvetica Neue' Helvetica, Arial, sans-serif


h1, h2, h3, h4, h5, h6, p, ul
  margin 0
  padding 0
  font-size 100%

.content
  width 300px
  margin 0 auto
  text-align center

.header
  font-size 18px
  h2
    font-weight 400
    margin-top 10px
    
.user
  .tab
    padding 20px 0
    .label
      position relative
      display inline-block
      font-size 20px
      line-height 150%
      a
        margin 0 15px
        &.active
          color #0f88eb
      span
        position absolute
        left 0
        bottom 0
        margin 0 15px
        width 2em
        height 2px
        background-color #0f88eb
  .form
    border solid 1px #ccc
    border-bottom none
    overflow hidden
    input
      color #888
      width 100%
      padding 1em .8em
      border none
      border-bottom solid 1px #ccc
      background-color #fff
    .reg,.login
      display none
    .active 
      display block
  .btn
    margin-top 1.2em
    button
      color #fff
      padding 0
      line-height 40px
      width 100%
      background-color #0f88eb
      border none
      border-radius 3px
      &:hover
        background-color #55abed
  










